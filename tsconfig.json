{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "target": "es2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./out",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "ignoreDeprecations": "5.0",
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["out", "node_modules", ".vscode-test", "mocked_data"]
}
